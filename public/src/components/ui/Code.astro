---
const { data } = Astro.props;

const formattedJson = JSON.stringify(data, null, 2);
---

<div class="w-full space-y-4">
  <div class="w-full flex items-center justify-end gap-8">
    <p>GET /blog</p>
    <button
      class="bg-blue-600 rounded px-6 py-3 text-white font-semibold cursor-pointer"
      >Try route</button
    >
  </div>
  <pre
    class="w-full bg-gray-800 text-white p-8 rounded-2xl">{formattedJson}</pre>
</div>
